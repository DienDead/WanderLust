<%- layout("/layouts/boilerplate") %>
    <div class="row mt-3">
        <h2 class="col-6 offset-3">WanderLust - Sign Up</h2>
        <div class="col-6 offset-3">
            <br>
            <form action="/signup" method="post" class="needs-validation" novalidate>
                <div>
                    <label for="username" class="form-label">UserName</label>
                    <input type="text" id="username" name="user[username]" placeholder="e.g. , JhonDoe" class="form-control" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                    <div class="invalid-feedback">
                        Enter a valid Username.
                    </div>
                </div>
                <br>
                <div>
                    <label for="email" class="form-label">Email ID</label>
                    <input type="email" id="email" name="user[email]" placeholder="e.g. , user@gmail.com" class="form-control"
                        required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                    <div class="invalid-feedback">
                        Enter a valid Email ID.
                    </div>
                </div>
                <br>
                <div>
                    <label for="password" class="form-label">Password</label>
                    <input type="password" id="password" name="user[password]" placeholder="Any unique password"
                        class="form-control" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                    <div class="invalid-feedback">
                        Enter a valid Password.
                    </div>
                </div>
                <!-- <br>
                <div>
                    <label for="confirmPass" class="form-label">Confirm Password</label>
                    <input type="password" placeholder="Re-Enter Password" class="form-control" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                    <div class="invalid-feedback">
                        Re-Entered Password doesn't match
                    </div>
                </div> -->
                <br>
                <button class="btn btn-dark">SignUp</button>
            </form>
        </div>
    </div>